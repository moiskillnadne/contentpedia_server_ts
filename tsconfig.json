{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "react",
    "removeComments": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules", "mikro-orm.config.js"]
}
